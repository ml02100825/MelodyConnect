# ===========================================
# MelodyConnect Environment Variables
# ===========================================
# このファイルを .env にコピーして実際の値を入力してください
# cp .env.example .env

# ===========================================
# Database Configuration
# ===========================================
MYSQL_DATABASE=MelodyConnectdb
MYSQL_USER=appuser
MYSQL_PASSWORD=apppass
MYSQL_ROOT_PASSWORD=root

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your_jwt_secret_key_here_at_least_64_characters_long

# ===========================================
# External API Keys
# ===========================================

# Gemini API (Google) - 問題生成用
# https://aistudio.google.com/app/apikey で取得
GEMINI_API_KEY=

# Spotify API - 楽曲検索用
# https://developer.spotify.com/dashboard で取得
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Genius API - 歌詞取得用
# https://genius.com/api-clients で取得
GENIUS_API_KEY=

# Wordnik API - 単語情報取得用 (オプション)
# https://developer.wordnik.com/ で取得
WORDNIK_API_KEY=

# Google Cloud TTS - 音声生成用 (オプション)
GOOGLE_CLOUD_API_KEY=

# AWSS3設定
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=